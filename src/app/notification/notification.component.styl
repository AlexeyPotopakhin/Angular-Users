.notification
  display flex
  align-items center

  width 240px
  height 64px
  background #FFFFFF
  box-shadow 0 7px 64px rgba(0, 0, 0, 0.07)
  border-radius 8px
  padding 0 8px 0 8px

  .notification__icon
    display flex
    align-items center
    justify-content center
    min-width 48px
    height 48px
    border-radius 8px

    i
      color #FFFFFF

  .notification__text
    color #1A051D
    margin-left 12px
