.auth
  height 100%
  display flex
  align-items center
  justify-content center

  form
    width 240px

    > input
      margin-bottom 24px

    input
      padding 14px

    button
      width 100%
      font-size 17px
      padding 14px

  .auth__password
    .auth__password_input
      display flex
      flex-direction row-reverse
      align-items center
      margin-bottom 24px

      i
        color #6979F8
        font-size 1.5rem
        position absolute
        padding-right 11px
        cursor pointer
