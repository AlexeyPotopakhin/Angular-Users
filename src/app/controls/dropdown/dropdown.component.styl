:host
  position relative
  display inline-block

.app-input__container

  input
    cursor pointer

  i
    color #3F3356

.app-dropdown__options
  position absolute
  width 100%
  background #FFFFFF
  box-shadow 0 7px 64px rgba(0, 0, 0, 0.07)
  border-radius 6px
  margin-top 8px
  z-index 1050

  .app-dropdown__scroll-host
    overflow hidden
    overflow-y auto
    position relative
    display block
    max-height 240px
    height auto

    .app-dropdown__option
      cursor pointer
      color #D0C9D6
      padding 16px

    .app-dropdown__option:hover
      color #3F3356

    .app-dropdown__option-active
      color #3F3356
