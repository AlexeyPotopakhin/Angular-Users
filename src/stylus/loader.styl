$loader-color = #6979F8

.loader-container
  text-align center
  overflow hidden
  height 100%

.loader
  position relative
  width 12px
  height 12px
  top 46%
  top -webkit-calc(50% - 6px)
  top calc(50% - 6px)
  left 46%
  left -webkit-calc(50% - 6px)
  left calc(50% - 6px)
  border-radius 12px
  background-color $loader-color
  -webkit-transform-origin 50% 50%
  transform-origin 50% 50%
  -webkit-animation loader 1s ease-in-out infinite
  animation loader 1s ease-in-out infinite

  &:before
    content ""
    position absolute
    background-color $loader-color
    opacity .6
    top 0
    left -25px
    height 12px
    width 12px
    border-radius 12px

  &:after
    content ""
    position absolute
    background-color $loader-color
    opacity .6
    top 0
    left 25px
    height 12px
    width 12px
    border-radius 12px

@-webkit-keyframes loader
  0% {
    -webkit-transform: rotate(0deg)
  }
  50% {
    -webkit-transform: rotate(180deg)
  }
  100% {
    -webkit-transform: rotate(180deg)
  }

@keyframes loader
  0% {
    transform: rotate(0deg)
  }
  50%{
    transform: rotate(180deg)
  }
  100%{
    transform: rotate(180deg)
  }
